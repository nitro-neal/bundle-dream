{
  "compilerOptions": {
    "lib": ["DOM", "ES2022"],
    "allowJs": false,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "build",
    "target": "ES6",
    "module": "NodeNext",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
